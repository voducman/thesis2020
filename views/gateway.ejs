<!doctype html>
<html lang="en">

<head>
    <% include metadata %>
    <style>
        .modal-body{
            padding-top: 0!important;;
        }

        div.form-group, fieldset{
            margin: 0;
        }

        fieldset{
            border-radius: 5px;
        }

        legend{
            font-size: 17px;
            margin-bottom: 0px;
        }
        .input{
            padding-left: 10px;
            border-radius: 2px!important;
            height: 25px!important;
            border: 1px solid #cec9c9!important;
            background-image: none!important;
        }
        .input.sm{ width: 70px; }
        .input.md{ width: 100px;}
        .input.lg{ width: 150px;}
        .input.xl{ width: 200px;}
        .input.auto{ width: 100%;}
    
        textarea.custom{
            padding-left: 10px;
            border-radius: 2px!important;
            border: 1px solid #cec9c9!important;
            width: 100%;
            background-image: none!important;
        }
    
        div.has-error input, div.has-error textarea{
            border-color: red!important;
        }

        #editGateway .modal-body{
        padding: 0!important;
    }

    #editGateway .card-content{
        padding-top: 0;
    }

    #editGateway span{
        font-size: 12px;
    }

    select.custom{
        width: 100%;
        height: 25px;
        background-color: #efefef;
        border-radius: 2px;
    }

    .internal{
        display: none;
    }

    .nav-pills:not(.nav-pills-icons) > li > a{
        border-radius: 5px!important;
    }

    .advance-options{
        border: 1px solid #c7c7c7; 
        border-radius: 4px; 
        margin-left: -16px; 
        background-color: #f3f3f3;
    }

    .advance-options input{
        background-color: white!important;
    }
    
    </style>
</head>

<body>
    <div class="wrapper" id="main-view">
        <% include sidebar %>
        <div class="main-panel">
            <% include header %>
            <div class="content" style="padding-bottom: 0;">
                <div class="col-md-3 col-md-offset-9 text-right" style="margin-bottom: -2%">
                    <button type="button" rel="tooltip" class="btn btn-info btn-round" data-original-title=""
                        title="Create New" onclick="addPopupCreateNew()">
                        <i class="material-icons">note_add</i>
                        Create New
                    </button>
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="card card-plain">
                                <div class="card-content" >
                                    <div id="gateway-map" class="map map-big"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card" style="background-color: #f3f9f7;">                               
                                <div class="card-content">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-striped" style="font-size: small;">
                                            <thead style="background-color: #3fb0ac; font-weight: 900!important;">
                                                <tr>
                                                    <th class="text-center">STT</th>
                                                    <th>Unique ID</th>
                                                    <th>Name</th>
                                                    <th>Created Time</th>
                                                    <th>Last Modified</th>
                                                    <th class="text-center">Status</th>
                                                    <th class="text-center">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody id="gateway-main-page">
                                                           
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                        </div>
                    </div>

                </div>
            </div>
            <% include footer %>
        </div>
    </div>
  
<% include addNewGateway %>
<% include editGateway   %>
</body>
<% include scripts %>
<script type="text/javascript">
  
</script>

<script type="text/javascript" src="/static/javascripts/gateway.bundle.js"></script>

</html>